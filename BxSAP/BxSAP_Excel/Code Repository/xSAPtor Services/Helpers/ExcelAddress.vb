      Friend Sub New(i_Range As Microsoft.Office.Interop.Excel.Range)

        Me.WBookName  = CType(CType(i_Range.Parent, Microsoft.Office.Interop.Excel.Worksheet), Microsoft.Office.Interop.Excel.Workbook).Name
        Me.WSheetName = CType(i_Range.Parent, Microsoft.Office.Interop.Excel.Worksheet).Name
