      Friend Sub New(ByVal i_WBName   As String,
                     ByVal i_WSName   As String,
                     ByVal i_Address  As String)

        Me.WBookName  = i_WBName
        Me.WSheetName = i_WSName
        Me.cc_Address = i_Address

        Me.SetupConfiguration()

      End Sub
      '¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
      Friend Sub New(ByVal i_Address As String)

        If  String.IsNullOrEmpty(i_Address)
          Return
        Else
          Me.cc_Address = i_Address.ToUpperInvariant()
        End If

        Me.SetupConfiguration()

      End Sub

