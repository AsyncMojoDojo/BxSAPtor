    #Region "Private Methods"

      Private Sub SetupConfiguration()

        Dim lo_ExcelHelper  As iExcelHelper = ExcelHelper.ExcelHelper()
        Dim lt_Entries      As String()     = Me.cc_Address.Split(New Char() {cz_SplitAddr, cz_SplitRefr},
                                                                  StringSplitOptions.RemoveEmptyEntries)      

        Me.cb_IsRange   = CBool(IIf(lt_Entries.Count > 2, True, False))

        Me.cc_tlColID   = lt_Entries(cz_TLColID).ToUpperInvariant
        Me.cn_tlRowNo   = CInt(lt_Entries(cz_TLRowNo))

        If Me.cb_IsRange
          Me.cc_brColID = lt_Entries(cz_BRColID).ToUpperInvariant
          Me.cn_brRowNo = CInt(lt_Entries(cz_BRRowNo))
        Else
          Me.cc_brColID = Me.cc_tlColID
          Me.cn_brRowNo = Me.cn_tlRowNo        
        End If

        Me.cn_tlColNo   = lo_ExcelHelper.ColumnIDToNo(Me.cc_tlColID)
        Me.cn_brColNo   = lo_ExcelHelper.ColumnIDToNo(Me.cc_brColID)
        Me.cn_ColCount  = Me.cn_brColNo - Me.cn_tlColNo + 1
        Me.cn_RowCount  = Me.cn_brRowNo - Me.cn_tlRowNo + 1

        Me.cc_tlAddr    = String.Concat(cz_SplitRefr, Me.cc_tlColID,
                                        cz_SplitRefr, Me.cn_tlRowNo )

        Me.cc_brAddr    = String.Concat(cz_SplitRefr, Me.cc_brColID,
                                        cz_SplitRefr, Me.cn_brRowNo )

      End Sub

    #End Region
