Namespace Main.SAPLogon

	Friend Class SapGuiXmlVM
								Implements iSapGuiXmlVM

		#Region "Properties"

			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			ReadOnly	Property	IsViewDisposed()	As	Boolean _
														Implements	iSapGuiXmlVM.IsViewDisposed
				Get
					Return	(IsNothing(Me.co_View) OrElse Me.co_View.IsDisposed)
				End Get
			End Property

		#End Region
		'¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯
		#Region "Definitions"

			Private	WithEvents co_View		As SapGuiXmlView
			'....................................................
			Private	co_Model				As	iSapGuiXmlModel
			Private	co_Model_Conn		As	iLogonConnectionModel
			Private	co_Parent				As	IWin32Window
			'....................................................
			Private	co_SubStSt			As	iSubscription(Of sMsgStartupShutdown)
			Private	co_SubCmd				As	iSubscription(Of mMvvMMsg)
			Private cc_XMLFile			As	String
			Private cb_OnlyGui			As	Boolean

		#End Region
		'¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯
		#Region "Constructors"

			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend	Sub	New(					ByVal	_connsetup		As iLogonConnSetupDTO			,
																ByVal _model				As iSapGuiXmlModel				,
																ByVal _modelconn		As iLogonConnectionModel	,
											Optional	ByVal	_parent				As IWin32Window	= Nothing		)

				Me.cc_XMLFile			= Path.Combine(	_connsetup.XML_Path,	_connsetup.XML_FileName	)
				Me.cb_OnlyGui			= _connsetup.XML_OnlyGUI
				Me.co_Model				= _model
				Me.co_Model_Conn	= _modelconn
				Me.co_Parent			= _parent

			End Sub

		#End Region
		'¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯
		#Region "Methods: Exposed"

			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend	Sub Show()	_
										Implements iSapGuiXmlVM.Show
			
				If Me.IsViewDisposed	Then	Me.PrepareView()
				'..................................................
				If Me.co_View.Visible
					If Me.co_View.WindowState = FormWindowState.Minimized
						Me.co_View.WindowState = FormWindowState.Normal
					Else
						Me.co_View.Hide()
					End If
				Else
					If Me.co_Parent Is Nothing
						Me.co_View.Show()
					Else
						Me.co_View.Show(Me.co_Parent)
					End If
				End If

			End Sub

		#End Region
		'¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯
		#Region "Methods: Message Handler"

			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Private Sub mh_MsgProcessor(ByVal _msg	As mMvvMMsg)

				Select Case	_msg.Command

					Case MvvMCmd.Data				:	LoadConnectionData(_msg)
					Case MvvMCmd.CloseView	:	CloseView()

				End Select

			End Sub
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Private Sub mh_StartupShutdown(ByVal _msg As sMsgStartupShutdown)

				Me.CloseView()

			End Sub

		#End Region
		'¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯¯
		#Region "Methods: Private"

			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Private	Sub PrepareView()

				Me.co_View	= New SapGuiXmlView()
				'..................................................
				Me.LoadTreeData()
				'..................................................
				Me.co_SubStSt	=	so_MsgHub.Value.Subscribe(Of sMsgStartupShutdown)		(AddressOf	Me.mh_StartupShutdown)
				Me.co_SubCmd	=	so_MsgHub.Value.Subscribe(Of mMvvMMsg)							(AddressOf	Me.mh_MsgProcessor)

			End Sub
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Private Sub CloseView()

				so_MsgHub.Value.Unsubscribe(Me.co_SubCmd)
				so_MsgHub.Value.Unsubscribe(Me.co_SubStSt)
				'..................................................
				so_MsgHub.Value.Publish(	New mMvvMMsg(	MvvMCmd.CloseView ) )

			End Sub
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Private Sub LoadTreeData()

				so_MsgHub.Value.Publish(	New mMvvMMsg(	MvvMCmd.Refresh,
																								Me.co_Model.GetSapGuiXmlTree(Me.cc_XMLFile)	)	)

			End Sub
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Private Sub LoadConnectionData(ByVal _cmd	As mMvvMMsg)

				Dim lt_Nodes	As New List(Of TreeNode)
				Dim lt_Conn		As New List(Of iLogonConnectionDTO)
				'..................................................
				lt_Nodes	= CType(_cmd.Payload, List(Of TreeNode))

				For Each lo_Node	In lt_Nodes

					Dim lo_ConnDTO	= Me.co_Model.GetSapGuiData(lo_Node.Name)

					lt_Conn.Add(lo_ConnDTO)

				Next
				'..................................................
				For Each lo_Conn As iLogonConnectionDTO	In lt_Conn
					Me.co_Model_Conn.Modify(lo_Conn)
				Next
				Me.co_Model_Conn.SaveRepository()
				so_MsgHub.Value.Publish(	New mMvvMMsg(	MvvMCmd.CloseView ) )

			End Sub

		#End Region

	End Class

End Namespace
