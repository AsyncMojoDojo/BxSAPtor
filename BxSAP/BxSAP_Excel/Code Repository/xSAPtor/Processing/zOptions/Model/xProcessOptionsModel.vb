		 Friend	Function SaveOptions(ByVal Options As ixProcessOptionsDTO)	_
											As Boolean _
												Implements ixProcessOptionsModel.SaveOptions

				Dim lb_Ret	As Boolean	= True

				My.Settings.xSAPProcessOptions_Run_NoParallel			= Options.ParallelProcessesTran
				My.Settings.xSAPProcessOptions_Run_MonAutoStart		= Options.RunMonitorAutoStart
				My.Settings.xSAPProcessOptions_Run_MonRefreshRate	= Options.RunMonitorRefreshRate

				Try

						My.Settings.Save()

					Catch ex As Exception

						lb_Ret	= False

				End Try

				Return lb_Ret

			End Function

