			Friend Function FetchOptions() _
												As ixProcessOptionsDTO _
													Implements ixProcessOptionsModel.FetchOptions

				Dim lo_Options	As ixProcessOptionsDTO	= New xProcessOptionsDTO

				lo_Options.ParallelProcessesTran	= My.Settings.xSAPProcessOptions_Run_NoParallel
				lo_Options.RunMonitorAutoStart		= My.Settings.xSAPProcessOptions_Run_MonAutoStart
				lo_Options.RunMonitorRefreshRate	= My.Settings.xSAPProcessOptions_Run_MonRefreshRate

				Return lo_Options

