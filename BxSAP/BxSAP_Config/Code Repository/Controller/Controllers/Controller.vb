			Private Sub LoadConfig()

				Me.co_ConfigDTO	= Me.co_Serialiser.DeSerializeObjectViaDataContract2File(Of ConfigDTO)(Me.cc_FullName)

				If IsNothing(Me.co_ConfigDTO)

					Me.co_ConfigDTO		= New ConfigDTO()
					Me.Save()

				Else

					If Not IsNothing(Me.co_ConfigDTO.LogonConnectionsRepositoryDTO)
						Me.co_ConfigDTO.LogonConnectionsRepositoryDTO.PrepareAfterLoad()
					End If
					'................................................
					If Not IsNothing(Me.co_ConfigDTO.SystemLogonRepositoryDTO)
						Me.co_ConfigDTO.SystemLogonRepositoryDTO.PrepareAfterLoad()
					End If
					'................................................
					If Not IsNothing(Me.co_ConfigDTO.SystemRepositoryDTO)
						Me.co_ConfigDTO.SystemRepositoryDTO.PrepareAfterLoad()
					End If

