		#Region "Methods: Exposed"

			Friend Function UpdateOptions(ByVal Settings	As BxSAPConfig_Settings.LogonSettingsRow)	As Boolean

				If Settings.Version = 0

					Dim x As BxSAPConfig_Settings.LogonSettingsRow = Me.co_Settings.NewLogonSettingsRow()

					For Each lo As DataColumn  In	Me.co_Settings.Columns

						x.co						lo.ColumnName

					Next

				End If


				Settings.AcceptChanges()

			End Function
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend Function GetOptions(Optional ByVal VersionNo As Short = 0)	As BxSAPConfig_Settings.LogonSettingsRow

				Dim lo_Row	As BxSAPConfig_Settings.LogonSettingsRow	=	Me.co_Settings.FindByVersion(VersionNo)
				'..................................................
				If IsNothing(lo_Row)	AndAlso	VersionNo = 0

					lo_Row	= Me.co_Settings.NewLogonSettingsRow()
					lo_Row.TimeStamp	= Now()
					Me.co_Settings.Rows.Add(lo_Row)
					
				End If
				'..................................................
				Return	lo_Row

			End Function
			'¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨¨
			Friend Function GetOptionsVersions()	As Dictionary(Of Short, DateTime)

				Return	Me.co_Settings.ToDictionary(	Function(lo) lo.Version		,
																							Function(lo) lo.TimeStamp		)

			End Function

		#End Region
